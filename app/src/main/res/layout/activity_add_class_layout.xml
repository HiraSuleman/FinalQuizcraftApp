<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddClassLayoutActivity">
    <RelativeLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/cut_card_background">
    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow"
        android:background="@android:color/transparent"
        android:tint="#EE322A28"
        android:layout_marginBottom="20dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_color="@color/light_blue"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/test4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        tools:ignore="MissingClass" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:typeface="sans"
            android:layout_below="@+id/image"
            android:text="Add New Class"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_marginTop="18dp"/>

    </RelativeLayout>

        <EditText
            android:layout_below="@+id/frame_layout"
            android:id="@+id/etclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:hint="Add Class"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/edittext_background"
            android:drawablePadding="18dp"
            android:padding="18dp"
            android:textColor="@android:color/black"
            android:inputType="textPersonName|textCapWords"
            android:drawableStart="@drawable/ic_account"/>
        />
    <EditText
        android:layout_below="@+id/etclass"
        android:id="@+id/etSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:hint="Add Class"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edittext_background"
        android:drawablePadding="18dp"
        android:padding="18dp"
        android:textColor="@android:color/black"
        android:inputType="textPersonName|textCapWords"
        android:drawableStart="@drawable/ic_account"/>
    />
    <Button
        android:id="@+id/button"
        android:layout_below="@id/etSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:minHeight="50dp"
        android:textAllCaps="false"
        android:layout_margin="18dp"
        android:text="SUBMIT"
        android:textColor="@android:color/white"/>


</RelativeLayout>