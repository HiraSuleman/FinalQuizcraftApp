            android:name="com.example.quizcraftappfyp.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.quizcraftappfyp.activities.TeacherHomeActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.AdminHomeActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.SignupActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.LoginActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EdiAdminActivity" />
    </application>

</manifest>