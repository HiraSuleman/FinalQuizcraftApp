    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.example.quizcraftappfyp.utilss.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.quizcraftappfyp.activities.AddClassLayoutActivity"></activity>
        <activity android:name="com.example.quizcraftappfyp.activities.AddClassActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.SettingActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.PaymentManageActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.FeedBackManageActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.StudentAccountActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.TeacherAccountActivity" />
        <activity android:name="com.example.quizcraftappfyp.activities.AdminAccountActivity" />
